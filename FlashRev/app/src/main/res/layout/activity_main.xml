<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Who is the 44th President of the\n United States?"
        android:textSize="40sp"
        android:textColor="#000000"
        android:background="@drawable/card_background"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="Barack Obama "
        android:textSize="40sp"
        android:visibility="invisible"
        android:background="#000000"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="-3dp"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="#000000"
        android:textSize="40sp"
        android:background="@drawable/answer_background" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="345dp"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_correctAnswer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="437dp"
        android:layout_marginEnd="-1dp"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#000000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/closed_eye" />

    <ImageView
        android:id="@+id/addBtn"
        android:layout_width="75dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/plus_icon" />

    <ImageView
        android:id="@+id/editBtn"
        android:layout_width="51dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/edit_icon" />


</RelativeLayout>